  .block1{
    height: 200rpx;
    background:rgb(241, 241, 241)
  
  }
  .want{
    color: #ffffff;
    
  }
  
  .btnImg {
    width: 60rpx;
    height: 60rpx;
  }
  /* 下划线 */
  .bottom_line {
    border-bottom: 1px solid rgb(226, 226, 226);
  }
  
  .post .userInformation{
      display: flex;
      border-radius: 10px 10px 0 0;
       width:722rpx; /**宽度*/
       height:110rpx; 
       margin: 15rpx 15rpx 1rpx 15rpx;
      flex-direction: row;
      background:#fff;
      padding:0 30rpx;
  }
  
  .post .userInformation .userImg{
      width: 110rpx;
      height: 110rpx;
      padding: 0 20rpx;
      line-height:100rpx;
      background:#fff;
      border-radius: 100%;    
  }
  
  .post .userInformation .userImg image{
      width: 70rpx;
      height: 70rpx;
      border-radius: 90rpx;
      line-height:100rpx;
      vertical-align: middle;
  }
  
  .post .userInformation .userName {
      padding: 10rpx 10rpx;
      font-size: 28rpx;
      line-height:100rpx;
      color: rgb(0, 0, 0);
      
  }
  
  .post .postInformation{
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      background:#fff;
      border-radius: 0;
      margin: 2.5rpx 15rpx 0 15rpx;
      justify-content: space-between;
      height: 80rpx;
      padding: 15rpx 15rpx;
      align-items: center;
  }
  .postInformation3{
      height: 90rpx;
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      background:#fff;
      border-radius: 0;
      margin: 0 15rpx 0 15rpx;
      align-items: center;
      justify-content: space-between;
      padding: 15rpx 15rpx;
  }

  .post .postInformation4{
      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
      background:#fff;
      border-radius: 0 0 10px 10px;
      margin: 0 15rpx 0 15rpx;
      align-items: center;
  }
  
  
  
  .post .postInformation .postTitle{
    padding: 20rpx 40rpx; 
    display: inline-block;
    flex: 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size:40rpx;
    color: #3d3a3a
  
  }
  
  .post .postInformation .goodsPrice{
    padding: 20rpx 40rpx;
    display: inline-block;
    color: #e74552;
    font-size:40rpx;
    font-weight:bold;
  }
  
  .item_price_before{
    padding: 20rpx 40rpx;
    display: inline-block;
    color:#B2B2B2;
    font-weight:bold;
    font-size: 30rpx;
    text-decoration:line-through;
  }
  .post .postInformation2{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    background:#fff;
    margin: 0 15rpx 0 15rpx;
    padding:65rpx 30rpx 5rpx 45rpx;
  }
  .post .postInformation2 .postContent{
      font-size:33rpx;
      color: rgb(117, 117, 117);
      word-break: break-all;
  }
  
   .goodsImg{
      flex-direction: column;
      justify-content: center;
      padding-top: 100rpx;
      align-items:center;
      padding-bottom: 50rpx;
  }
  
  .post .contact{
      width: 100%;
      height: 100%;
      position: fixed;  
  }
  
  .good_cell {
    padding: 15rpx 0;
    align-items: center;
  }
  .user_nickname {
    display: inline-block;
    flex: 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  
  .user_location {
    display: inline-block;
    color: #e74552;
  }
  
  .share {
  margin-top: auto;
  margin-bottom: auto;
  margin-left: auto;
}

.share button {
  background-color: rgb(111, 200, 255);
}